# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{py,pyi}]
max_line_length = 88
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.{json,js}]
indent_size = 2

[Makefile]
indent_style = tab 